<% layout('./layouts/boilerplate') -%>
    <h1>Update campground</h1>
    <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
        <div>
            <label for='title'>Title: </label>
            <input type="text" id='title' name='campground[title]' value="<%=campground.title%>">
        </div>
        <div>
            <label for='price'>Price: </label>
            <input type="price" id='price' name='campground[price]' value="<%=campground.price%>">
        </div>
        <div>
            <label for='description'>Description: </label>
            <input type="text" id='description' name='campground[description]' value="<%=campground.description%>">
        </div>
        <div>
            <label for='location'>Location: </label>
            <input type="text" id='location' name='campground[location]' value="<%=campground.location%>">
        </div>
        <button>Submit</button>
    
    </form>
