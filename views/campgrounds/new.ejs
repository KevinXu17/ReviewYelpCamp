<% layout('./layouts/boilerplate') -%>
    <h1>Add new Campground</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for='title'>Title: </label>
            <input type="text" id='title' name='campground[title]'> 
        </div>
        <br>
        <div>
            <label for='location'>Location: </label>
            <input type="text" id='location' name='campground[location]'> 
        </div>
        <br>
        <div>
            <label for='price'>price: </label>
            <input type="text" id='price' name='campground[price]'> 
        </div>
        <br>
        <div>
            <label for='description'>description: </label>
            <input type="text" id='description' name='campground[description]'> 
        </div>

        <button>Submit</button>
    </form>
    <div>
        <a href="/campgrounds">Back to Campgrounds</a>
    </div>

    
