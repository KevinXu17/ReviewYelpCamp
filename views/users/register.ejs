<% layout('./layouts/boilerplate') -%>

<%# TODO should not be here%>
<script> 
function checkConfirmedPw() {
    console.log(document.getElementById('inputPassword').value)
    console.log(document.getElementById('inputConfirmedPassword').value)
    console.log(document.getElementById('inputPassword').value === document.getElementById('inputConfirmedPassword').value)
    if (document.getElementById('inputPassword').value ===
    document.getElementById('inputConfirmedPassword').value) {
    document.getElementById('submit').disabled = false;
  } else {
    document.getElementById('submit').disabled = true;
  }
}
</script>


<div class="row col-6">
    <h3>Register New User</h3>
    <form class='row g-3 validated-form' novalidate action='/register' method="POST">
        <div class="row mb-3">
          <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail" name="user[email]" required maxlength="50">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please insert a valid email!</div>
          </div>
        </div>
        <div class="row mb-3">
            <label for="inputUserName" class="col-sm-2 col-form-label">UserName</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputUserName" name="user[username]" required maxlength="30">
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please insert a valid user name!</div>
            </div>
          </div>
        <div class="row mb-3">
          <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" name="user[password]" onchange="checkConfirmedPw();"
            required maxlength="30">
          </div>
        </div>
        <div class="row mb-3">
            <label for="inputConfirmedPassword" class="col-sm-2 col-form-label" ><small>Confirmed Password</small></label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputConfirmedPassword"  onchange="checkConfirmedPw();"
              required maxlength="30">
            </div>
          </div>
        <div class="text-center">
            <button type="submit" id="submit" class="btn btn-info col-sm-6" disabled>Register</button>
        </div>
      </form>
</div>


